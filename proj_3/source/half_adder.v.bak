`include "prj_definition.v"

module HALF_ADDER(Y,C,A,B);
output Y,C;
input A,B;
// half adder
// Y = A XOR B
// C = A AND B

xor xor_inst1(Y, A, B);
and and_inst1(C, A, B);

endmodule
